<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#ACD696"
    android:paddingTop="100dp"
    android:id="@+id/main">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_logo_3"
        android:contentDescription="App Logo"/>

    <!-- Welcome Text -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to "
            android:textSize="24sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/appNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SafeHaven"
            android:textSize="24sp"
            android:textColor="#0077CC"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your preferred language"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="40dp"/>

    <!-- Language Selection Buttons -->
    <LinearLayout
        android:id="@+id/languageSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/language_box_bg"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/sinhalaButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="සිංහල"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/englishButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="English"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/tamilButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="தமிழ்"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>
