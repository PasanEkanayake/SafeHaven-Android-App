<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#ACD696"
    android:padding="16dp">

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_logo_1"
                android:layout_marginTop="40dp"
                android:contentDescription="App Logo"/>

            <!-- Small description about Registration & Privacy -->
            <TextView
                android:id="@+id/privacyInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You re all set to face your next disaster."
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/privacyInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can change your account information in the Settings section of the app any time."
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:gravity="center"/>

            <!-- 1st row: Image left, Text right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_intro_1"
                    android:contentDescription="Intro 1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="First description here about disaster preparedness."
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- 2nd row: Text left, Image right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:text="Second description here, text goes to the left."
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_intro_2"
                    android:contentDescription="Intro 2"/>
            </LinearLayout>

            <!-- 3rd row: Image left, Text right -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_intro_3"
                    android:contentDescription="Intro 3"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Third description here, aligned to the right of image."
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- Bottom Navigation Buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Back Button at bottom-left -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"/>

        <!-- Next Button at bottom-right -->
        <Button
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"/>
    </RelativeLayout>


</RelativeLayout>