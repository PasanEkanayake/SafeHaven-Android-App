<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A3D88C">

    <!-- Header (Logo + Settings Icon) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_logo_2"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"/>
    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        android:textColor="#3784CB"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Contact Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- Contact 1 -->
        <LinearLayout
            style="@style/EmergencyButtonStyle"
            android:backgroundTint="#2E75B6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="119"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police Emergency Hotline"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Contact 2 -->
        <LinearLayout
            style="@style/EmergencyButtonStyle"
            android:backgroundTint="#2E75B6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambulance / Fire and rescue"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Contact 3 -->
        <LinearLayout
            style="@style/EmergencyButtonStyle"
            android:backgroundTint="#2E75B6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+94 112 136 222"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disaster Emergency Operation Center"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Contact 4â€“6 -->
        <LinearLayout
            style="@style/EmergencyButtonStyle"
            android:backgroundTint="#2E75B6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="911"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police Emergency Service"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3784CB"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
