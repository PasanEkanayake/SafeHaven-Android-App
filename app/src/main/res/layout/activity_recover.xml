<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ACD696">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo_2"
                android:contentDescription="@string/app_name" />

        </LinearLayout>

        <ImageView
            android:id="@+id/settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"/>
    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Post-Disaster Guides"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#3784CB"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Scrollable Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Card 1: Floods -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guideFloods"
                style="@style/GuideButtonStyle"
                android:background="@drawable/rounded_card"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/img_postguides_floods" />
                <TextView
                    style="@style/GuideTextStyle"
                    android:text="Flood Aftermath Survival Guide: What to Do When the Waters Recede?" />
            </LinearLayout>

            <!-- Card 2: Landslides -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guideLandslides"
                style="@style/GuideButtonStyle"
                android:background="@drawable/rounded_card"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/img_postguides_landslides" />
                <TextView
                    style="@style/GuideTextStyle"
                    android:text="Landslide Aftermath Survival Guide: Steps to Take When the Ground Stops Movings" />
            </LinearLayout>

            <!-- Card 3: Earthquakes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guideEarthquakes"
                style="@style/GuideButtonStyle"
                android:background="@drawable/rounded_card"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/img_postguides_earthquakes" />
                <TextView
                    style="@style/GuideTextStyle"
                    android:text="Earthquake Aftermath Survival Guide: Steps to Take When the Shaking Stops" />
            </LinearLayout>

            <!-- Card 4: Fires -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guideFires"
                style="@style/GuideButtonStyle"
                android:background="@drawable/rounded_card"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/img_postguides_wildfires" />
                <TextView
                    style="@style/GuideTextStyle"
                    android:text="Wildfire Aftermath Survival Guide: Steps to Take When the Flames Have Passed" />
            </LinearLayout>

            <!-- Card 5: Tsunamis -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guideHurricanes"
                style="@style/GuideButtonStyle"
                android:background="@drawable/rounded_card"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/img_postguides_tsunamis" />
                <TextView
                    style="@style/GuideTextStyle"
                    android:text="Tsunami Aftermath Survival Guide: Steps to Take When the Waves Recede" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3784CB"
        app:menu="@menu/bottom_nav_menu"/>
</LinearLayout>
